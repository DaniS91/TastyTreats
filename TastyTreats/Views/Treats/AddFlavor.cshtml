@{
  Layout = "_Layout";
}

@model TastyTreats.Models.Treat

<h2>Add a flavor to this treat: @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" class="btn btn-success"/>
}

<p>@Html.ActionLink("Treat List", "Index", null, null, new { @class = "btn btn-secondary"})</p>