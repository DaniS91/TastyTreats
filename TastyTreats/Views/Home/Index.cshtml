@{
  Layout = "_Layout";
}

@using TastyTreats.Models;

<h1>Welcome to Pierre's Tasty Treats!</h1>

<hr>

<h4>Flavors</h4>
@if (Model["flavors"].Length == 0)
{
  <p>No flavors have been added yet!</p>
  <p>@Html.ActionLink("Add New Flavor", "Create", "Flavors", null, new { @class = "btn btn-info"})</p>
} 
<ul>
  @foreach (Flavor flav in Model["flavors"])
  {
    <li>@Html.ActionLink(@flav.Name, "Details", "Flavors", new { id = @flav.FlavorId})</li>
  }
</ul>

<h4>Treats</h4>
@if (Model["treats"].Length == 0)
{
  <p>No treats have been added yet!</p>
  <p>@Html.ActionLink("Add New Treat", "Create", "Treats", null, new { @class = "btn btn-primary"})</p>
} 
<ul>
  @foreach (Treat treat in Model["treats"])
  {
    <li>@Html.ActionLink(@treat.Name, "Details", "Treats", new { id = @treat.TreatId})</li>
  }
</ul>

<hr>

<span>@Html.ActionLink("Treat List", "Index", "Treats", null, new { @class = "btn btn-secondary"})</span> 
<span>@Html.ActionLink("Flavor List", "Index", "Flavors", null, new { @class = "btn btn-secondary"})</span>
<span>@Html.ActionLink("Manage Account", "Index", "Account", null, new { @class = "btn btn-secondary"})</span