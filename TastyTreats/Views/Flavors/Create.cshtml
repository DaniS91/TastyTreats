@{
  Layout = "_Layout";
}

@model TastyTreats.Models.Flavor

<h2>Add a new flavor</h2>
<p>@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  <input type="submit" value="Submit" class="btn btn-success"/>
}
<span>@Html.ActionLink("Flavor List", "Index", null, null, new { @class = "btn btn-secondary"})</span>