@{
  Layout = "_Layout";
}

@using TastyTreats.Models;

<h1>Flavors for @User.Identity.Name</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<span>@Html.ActionLink("Add New Flavor", "Create", null, null, new { @class = "btn btn-primary"})</span>
<span>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "btn btn-info"})</span>